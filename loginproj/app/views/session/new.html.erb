<div class="">
  <p id="notice"><%= flash[:alert] %></p>
  <%= form_tag do %>
  <fieldset>
    <legend>Please Log In</legend>
    <div class="">
      <%= label_tag :name, "Name" %>
      <%= text_field_tag :name, params[:name] %>
      <%= label_tag :password, "Password" %>
      <%= password_field_tag :password, params[:password] %>
    </div>
    <div class="">
      <%= submit_tag "Login" %>
    </div>
  </fieldset>
  <% end %>
</div>
